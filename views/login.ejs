<%- include("./partials/header") -%>

<div class="container py-3 form-container text-white">
    <form action="/login" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input name="email" type="email" class="form-control" id="exampleInputEmail1" placeholder="email" required>
        </div>
        <div class="form-group">
            <label for="contraseña">Password &emsp;<span id="mensaje-longitud" class="mensaje-longitud"></span></label>
            <input name="password" type="password" class="form-control" placeholder="Password" id="contraseña" required>
        </div>
        <button type="submit" class="btn btn-primary" id="submit-button">Log-in</button>
    </form>
    <a href="/password-forgot" class="btn btn-success">Forgot your password?</a>
</div>

<%- include("./partials/footer") -%>